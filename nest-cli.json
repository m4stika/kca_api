{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../logs/*",
        "outDir": "dist/logs",
        "watchAssets": true
      },
      {
        "include": "public/**/*",
        "outDir": "dist/public",
        "watchAssets": true
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}
